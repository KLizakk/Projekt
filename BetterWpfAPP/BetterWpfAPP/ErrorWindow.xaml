<Window x:Class="BetterWpfAPP.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterWpfAPP"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="200" Width="400">
    <Grid>
        <Border Margin="100,100,100,10" Background="Red">
            <Button x:Name="OK" Content="OK" FontSize="40"   Background="Red" Click="OK_Click"/>
        </Border>
        <TextBlock Margin="10,25,10,100" Text="Wyszukiwany zawodnik nie istnieje!" TextAlignment="Center" VerticalAlignment="center" FontSize="20"/>
    </Grid>
</Window>
